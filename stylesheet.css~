#three_column {

	/*found here: w3schools.com/css/ */
	/*sets number of columns*/
	-webkit-column-count: 3; 
	-moz-column-count: 3;
	column-count:3;

}

.keeptogether {

	/*found at Stack Overflow, CSS Column Breaks Page*/
	/*Keeps content in certain column*/
	display: inline-block;
	width: 100%;

}

#narrow_column {

	/*make column narrow*/
	column-width:15%;

	/*put a border around the column*/
	-webkit-column-rule-style:solid;
	-moz-column-rule-style:solid;
	column-rule-style:solid;

	/*set the color of that border*/
	column-rule-color: #810040;

}

#other_column {

	column-width:40%
	color:#e88472;

}

#right_align {

	text-align: right;

}

.set_margin {

	margin-top: 40px;
	margin-bottom:40px;
	margin-right:55px;
	margin-left:55px;	

}

.text_format {

	color: #e88472;
	font-size:20px;

}

